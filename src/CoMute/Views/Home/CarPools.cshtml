@model IEnumerable<CoMute.Web.Models.Dto.CarPoolDto>
@{ 
    ViewBag.Title = "Created Car Pools";
}

<section class="h2">
    <h2>Created Car Pools</h2>
</section>

@if(Model.Count() == 0)
{
    <section>
            <p><strong>You have created 0 Car pools</strong></p>
            <p> @Html.ActionLink("Create new car pool", "Create", "Home")</p>
    </section>
}
else
{
    <section>
            <p><strong>You have created @Model.Count() car pools</strong></p>
            <p>@Html.ActionLink("Create more", "Create", "Home")</p>
            <p>
                <table class="table table table-striped">
                    <tr>
                        <th scope="col">
                            @Html.DisplayNameFor(model => model.DepartureTime)
                        </th>
                        <th scope="col">
                            @Html.DisplayNameFor(model => model.ExpectedArrivalTime)
                        </th>
                        <th scope="col">
                            @Html.DisplayNameFor(model => model.Origin)
                        </th>
                        <th scope="col">
                            @Html.DisplayNameFor(model => model.Destination)
                        </th>
                        <th scope="col">
                            @Html.DisplayNameFor(model => model.AvailableSeats)
                        </th>
                        <th scope="col">
                            @Html.DisplayNameFor(model => model.DateCreated)
                        </th>
                        <th scope="col">
                            @Html.DisplayNameFor(model => model.Notes)
                        </th>
                    </tr>

                    @foreach (var item in Model)
                    {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.DepartureTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ExpectedArrivalTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Origin)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Destination)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AvailableSeats)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateCreated)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Notes)
                    </td>
                </tr>
                    }

                </table>
            </p>
    </section>
}

