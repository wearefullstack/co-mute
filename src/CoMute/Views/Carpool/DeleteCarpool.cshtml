@model CoMute.Web.Models.Carpool

@{
    ViewData["Title"] = "Delete Carpool Route";
}

<h2>Delete Student</h2>
<p class="text-danger">@ViewBag.ErrorMessage</p>

<h4>Are you sure you want to delete this carpool route?</h4>
<div>
    <hr />
    <p>
        <span class="font-weight-bold">
            @Html.DisplayNameFor(model => model.UserName)
        </span><br />

        @Model.UserName
    </p>
    <p>
        <span class="font-weight-bold">
            @Html.DisplayNameFor(model => model.Origin)
        </span><br />
        @Model.Origin
    </p>
    <p>
        <span class="font-weight-bold">
            @Html.DisplayNameFor(model => model.DepartureTime)
        </span><br />
        @Model.DepartureTime
    </p>
    <p>
        <span class="font-weight-bold">
            @Html.DisplayNameFor(model => model.Destination)
        </span><br />
        @Model.Destination
    </p>
    <p>
        <span class="font-weight-bold">
            @Html.DisplayNameFor(model => model.ETA)
        </span><br />
        @Model.ETA
    </p>

    <form method="post">
        @Html.TextBoxFor(m => m.CarpoolID, new{ type = "hidden" })
        <input type="submit" value="Delete" class="btn btn-danger btn-sm" /> |
        <a asp-controller="Students" asp-action="Index">Back to List</a>
        @Html.ActionLink("Back To Carpools","Index")
    </form>

</div>

